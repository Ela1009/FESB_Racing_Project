<Window x:Class="StopwatchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stopwatch App" Height="300" Width="400">
    <Grid>
        <TextBlock x:Name="stopwatchText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Foreground="Red" Text="00:00:00" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Start" Click="StartButton_Click" Margin="5" />
            <Button Content="Stop" Click="StopButton_Click" Margin="5" />
            <Button Content="Reset" Click="ResetButton_Click" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
